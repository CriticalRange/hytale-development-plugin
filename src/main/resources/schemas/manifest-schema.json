{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hytalemodding.dev/schemas/manifest.json",
  "title": "Hytale Plugin Manifest",
  "description": "Schema for Hytale plugin manifest.json files",
  "type": "object",
  "required": ["Group", "Name", "Version"],
  "properties": {
    "Group": {
      "type": "string",
      "description": "The group/identifier",
      "pattern": "^[A-Za-z][A-Za-z0-9_-]*$",
      "examples": ["Hytale", "YourName"]
    },
    "Name": {
      "type": "string",
      "description": "The plugin name",
      "pattern": "^[A-Za-z][A-Za-z0-9_-]*$",
      "examples": ["ExamplePlugin", "MyAwesomePlugin"]
    },
    "Version": {
      "type": "string",
      "description": "The plugin version (semver recommended)",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[A-Za-z0-9.]+)?$",
      "examples": ["1.0.0", "2.1.0-beta.1"]
    },
    "Description": {
      "type": "string",
      "description": "A brief description of the plugin",
      "examples": ["An example plugin for Hytale"]
    },
    "Authors": {
      "type": "array",
      "description": "List of plugin authors",
      "items": {
        "type": "object",
        "required": ["Name"],
        "properties": {
          "Name": {
            "type": "string",
            "description": "Author's name"
          },
          "Email": {
            "type": "string",
            "format": "email",
            "description": "Author's email address"
          },
          "Url": {
            "type": "string",
            "format": "email",
            "description": "Author's url"
          }
        }
      }
    },
    "Website": {
      "type": "string",
      "format": "uri",
      "description": "The plugin's website",
      "examples": ["https://hytalemodding.dev"]
    },
    "Main": {
      "type": "string",
      "description": "Fully qualified name of the main plugin class",
      "pattern": "^[a-z][a-z0-9]*(\\.[a-zA-Z][a-zA-Z0-9]*)*$",
      "examples": ["dev.hytalemodding.ExamplePlugin"]
    },
    "ServerVersion": {
      "type": "string",
      "description": "Required server version (* for any)",
      "default": "*",
      "examples": ["*", "1.0.0", ">=1.0.0"]
    },
    "Dependencies": {
      "type": "object",
      "description": "Required plugin dependencies (name -> version)",
      "additionalProperties": {
        "type": "string"
      }
    },
    "OptionalDependencies": {
      "type": "object",
      "description": "Optional plugin dependencies (name -> version)",
      "additionalProperties": {
        "type": "string"
      }
    },
    "LoadBefore": {
      "type": "object",
      "description": "Load before plugin dependencies (name -> version)",
      "additionalProperties": {
        "type": "string"
      }
    },
    "DisabledByDefault": {
      "type": "boolean",
      "description": "If the plugin should default to being disabled (default false)"
    },
    "IncludesAssetPack": {
      "type": "boolean",
      "description": "If the plugin includes an asset pack (default false)"
    }
  },
  "additionalProperties": true
}
